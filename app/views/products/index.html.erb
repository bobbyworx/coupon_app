<h1>Products</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Price</th>
    <th>Buy</th>
  </tr>
  <%= link_to 'Add new product', new_product_path %>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.variants.where(:is_active => true).map(&:price).min %></td>
      <td><%= link_to 'Buy', buy_product_path(product) %></td>
    </tr>
  <% end %>
</table>
